<div id="main">
  <div id="">
    <!-- SEARCH PANEL -->
    <div class="col-md-offset-2 col-md-8">
      <div class="container">
        <div class="row">
          <div class="col-md-offset-4 col-md-4">
            <button id="filter" class="btn btn-default" data-toggle="collapse" data-target="#collapsePanel" aria-expanded="true">More filters <i class="fa fa-chevron-up"></i></button>
          </div>
        </div>
        <div class="collapse" id="collapsePanel">
  
          <%= search_form_for @search, url: search_path, remote: true do |f| %>
            <div class="row">
              <div class="col-md-8">
                <label>Price range:</label>
                <div id="slider-range"></div>
              </div>
              <div class="col-md-2">
                <label>Min Price:</label>
                <%= f.text_field :price_gteq, class: "form-control" %>
              </div>
              <div class="col-md-2">
                <label>Max Price:</label>
                <%= f.text_field :price_lteq, class: "form-control" %>
              </div>
            </div>
            <hr/>
                
          <div class="row">
              <div class="col-md-4">
                <div class="form-group select">
                  <label>Rug Type</label>
                  <%= f.select :rug_type_gteq, [["Small", "Small"], ["Medium", "Medium"], ["Large","Large"], ["Extra Large","Extra Large"]], id: "rug_type", prompt: "Select...", class: "form-control" %>
                </div>
              </div>
            </div>
            <hr/>

            <div class="row text-center">
              <%= f.submit "Search", class: "btn btn-form" %>
            </div>
          <% end %>
        </div>
        
        <br/>
  
        <div class="row" id="rug_listing">
          <%= render partial: "rugs/rugs_list", locals: {rugs: @arrRugs} %>
        </div>
      </div>
    </div>
  </div>


</div>

<script>
  var open = true;

  $('#filter').click(function() {
    if (open) {
      $('#filter').html("More filters <i class='fa fa-chevron-up'></i>")
    } else {
      $('#filter').html("More filters <i class='fa fa-chevron-down'></i>")
    }
    open = !open;
  });
</script>

<script>
  $(function() {
    $("#q_price_gteq").val('0');
    $("#q_price_lteq").val('500');

    $("#slider-range").slider({
      range: true,
      min: 0,
      max: 500,
      values: [0, 500],
      slide: function(event, ui) {
        $("#q_price_gteq").val(ui.values[0]);
        $("#q_price_lteq").val(ui.values[1]);
      }
    });

    $(".ui-widget-header").css('background', '#2C3E50');
    $(".ui-state-default, .ui-widget-content").css('background', 'white');
    $(".ui-state-default, .ui-widget-content").css('border-color', '#2C3E50');
  })
</script>